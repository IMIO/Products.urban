    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="urban">

  <browser:page
     for="Products.CMFPlone.interfaces.IPloneSiteRoot"
     name="check_opinion_requests"
      class=".opinions_request.CheckOpinionsRequest"
