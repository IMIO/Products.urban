<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="urban"
      tal:define="pylonsHost context/portal_url/portal_urban/getPylonsHost">

<metal:block fill-slot="top_slot"
            tal:define="global parcels view/getParcels;" />

<head>
<tal:block condition="parcels">
<div metal:fill-slot="style_slot" >
    <metal:listing use-macro="here/@@map-macros/urbanMapCSS" />
</div>
</tal:block>
</head>

<body>
<metal:main fill-slot="main">
<metal:main_macro define-macro="main">
    <metal:body define-macro="body_macro"
                tal:define="applicants context/getApplicants|nothing;
                            useTabbing view/isUsingTabbing;
                            old_parcels view/getOldParcels" >

<tal:block condition="parcels">
<metal:listing use-macro="here/@@map-macros/urbanMapScriptBase" />
<metal:listing use-macro="here/@@map-macros/urbanMapScript" />
</tal:block>
<metal:titleWithIcon use-macro="here/urban_macros/macros/titleWithIcon" />

  <fieldset><strong><legend i18n:translate="concerned_parcels">Concerned parcel(s)</legend></strong>
   <div metal:use-macro="here/urban_macros/macros/urbanParcelsMacro" />
  </fieldset>

  <tal:block condition="old_parcels">
     <fieldset><strong><legend i18n:translate="old_parcels_history">Old parcels historic</legend></strong>
     <table class="listing">
      <!--thead>
        <tr><th style="cursor: pointer"
                          tal:attributes="colspan python: len(old_parcels)">The following parcels cant be displayed on the map because they are too old</th>
        </tr>
      </thead-->
      <tr>
      <tal:column tal:repeat="parcel_historic old_parcels">
      <td>
       <div tal:repeat="parcel parcel_historic">
        <tal:block define="oddrow repeat/parcel/odd;" tal:attributes="class python: oddrow and 'even' or 'odd'">
         <span tal:replace="structure python: '&nbsp;'*parcel['level']*3" tal:condition="python: parcel['level']"/>
         <span fcolor="#FF0000" tal:attributes="style python: parcel['highlight'] and 'background-color:orange' or ''">
          <span tal:content="python: parcel['divname']"/>
          <span tal:content="python: str(parcel['prc'])"></span>
          </span>

          <form i18n:domain="urban" name="showparcel"
                tal:condition="repeat/parcel/end">
           <input type="hidden" name="show_old_parcel" value="1"/>
           <input type="hidden" name="division" value="#" tal:attributes="value python: parcel['division']" />
           <input type="hidden" name="section" value="#" tal:attributes="value python: parcel['section']" />
           <input type="hidden" name="radical" value="#" tal:attributes="value python: parcel['radical'] and parcel['radical'] or 0" />
           <input type="hidden" name="bis" value="#" tal:attributes="value python: parcel['bis'] and parcel['bis'] or 0" />
           <input type="hidden" name="exposant" value="#" tal:attributes="value python: parcel['exposant']" />
           <input type="hidden" name="puissance" value="#" tal:attributes="value python: parcel['puissance'] and parcel['puissance'] or 0" />
           <input type="submit" class="context" id="parcel" value="Show this parcel on map" i18n:attributes="value" />
          </form>
        </tal:block>
       </div>
      </td>
      <!--td width="5%">
      </td-->
      </tal:column>
     </tr>
    </table>
   </fieldset>
  </tal:block>

  <div tal:condition="not: parcels">
   <p class="discreet" i18n:translate="cartography_map_descr">A map will be displayed when you will have defined concerned parcels</p>
  </div>

  <tal:block condition="parcels">
   <form>
    <input type="hidden" id="map_initialized" value="0" />
   </form>
   <fieldset><strong><legend i18n:translate="cartography">Cartography</legend></strong></fieldset>
   <div id="urbanmapctn" style="width:100%; height:800px"></div>
  </tal:block>

  <div tal:replace="structure provider:plone.belowcontentbody" />

</metal:body>
</metal:main_macro>
</metal:main>
</body>
</html>
