<metal:description define-macro="description_macro" i18n:domain="urban">

    <tal:vars define="exclude python:['title', 'workLocations', 'businessOldLocation'];">
        <metal:parent_call use-macro="here/@@licencetabs-macros/description_macro">
            <td metal:fill-slot="address_and_parcels_slot" valign="top" width=49%>

                <fieldset tal:define="workLocations context/getWorkLocations"><legend i18n:translate="urban_label_businessLocation">Business location</legend>
                        <div tal:condition="workLocations"><metal:myfield use-macro="python:here.widget('workLocations', mode='view')" /></div>
                    <span tal:condition="not: workLocations" class="discreet" i18n:translate="content_none">None</span>
                </fieldset>

                <fieldset tal:define="workLocations context/getBusinessOldLocation"><legend i18n:translate="urban_label_businessOldLocation">Old business location</legend>
                    <div tal:condition="workLocations"><metal:myfield use-macro="python:here.widget('oldBusinessLocation', mode='view')" /></div>
                    <span tal:condition="not: workLocations" class="discreet" i18n:translate="content_none">None</span>
                </fieldset>

                <fieldset><legend i18n:translate="concerned_parcels">Concerned parcel(s)</legend>
                    <div metal:use-macro="here/@@globalmacros/urbanParcelsMacro" />
                </fieldset>

            </td>
        </metal:parent_call>
    </tal:vars>

</metal:description>


<metal:road define-macro="road_macro" i18n:domain="urban">
    <metal:parent_call use-macro="here/@@licencetabs-macros/road_macro" />
</metal:road>


<metal:location define-macro="location_macro" i18n:domain="urban">
    <metal:parent_call use-macro="here/@@licencetabs-macros/location_macro" />
</metal:location>


<metal:inquiry define-macro="investigation_and_advices_macro" i18n:domain="urban">
    <div metal:use-macro="here/@@licencetabs-macros/investigation_and_advices_macro" />
</metal:inquiry>
