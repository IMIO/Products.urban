/*
** urban style sheet
*/

/* <dtml-with base_properties> (do not remove this :) */
/* <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either :) */

.listing img, .listing input {
vertical-align: sub;
}

/* align the add button of datagrid widgets on the left */
#datagridwidget-add-button {
 float: left;
 margin-bottom: 1.5em;
}
/* hide the column that will receive the street */
#title_workLocations_new, #title_workLocations_1, #title_workLocations_2, #title_workLocations_3, #title_workLocations_4 {
 border: 0;

}

/* this hide the input appearance while editing the street name */
#workLocationStreet_label {
border: 0;
background: transparent;
cursor: default;
}

div.warning {
/* Class for error indication in forms */
background-color: #fd7;
border: 1px solid #d80;
padding: 0.5em;
margin: 0 0 1em 0;
}

/* Colors on states */
.state-in_progress {
color: #EA6619 !important;
}

#plone-contentmenu-workflow .state-in_progress {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: #EA6619;
    border: 0.1em solid #EA6619;
    color: White !important;
}

.state-closed {
color: grey !important;
}

#plone-contentmenu-workflow .state-closed {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: grey;
    border: 0.1em solid grey;
    color: White !important;
}

.state-enabled {
color: green !important;
}

#plone-contentmenu-workflow .state-enabled {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: green;
    border: 0.1em solid green;
    color: White !important;
}

.state-disabled {
color: red !important;
}

#plone-contentmenu-workflow .state-disabled {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: red;
    border: 0.1em solid red;
    color: White !important;
}

.state-accepted {
color: green !important;
}

#plone-contentmenu-workflow .state-accepted {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: green;
    border: 0.1em solid green;
    color: White !important;
}

.state-retired {
color: grey !important;
}

#plone-contentmenu-workflow .state-retired {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: grey;
    border: 0.1em solid grey;
    color: White !important;
}

.state-incomplete {
color: black !important;
}

#plone-contentmenu-workflow .state-incomplete {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: black;
    border: 0.1em solid black;
    color: White !important;
}

.state-refused {
color: red !important;
}

#plone-contentmenu-workflow .state-refused {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    padding: 0 0.5em;
    background-color: red;
    border: 0.1em solid red;
    color: White !important;
}

.imageInput {
    border-width: 0px;
    background: none;
}

.noPadding {
    padding-right: 0em !important;
    padding-left: 0em !important;
    padding-top: 0em !important;
    padding-bottom: 0em !important;
}

.ptButton {
    background: &dtml-globalBackgroundColor; url(&dtml-portal_url;/linkOpaque.gif) 5px 1px no-repeat;
    cursor: pointer;
    font-size: &dtml-fontSmallSize;;
    padding: 1px 1px 1px 12px;
    text-transform: &dtml-textTransform;;
    /* overflow: visible; IE produces ugly results with this */
}

legend {
  background-color: transparent;
}

ul.formTabs {
margin-bottom: 0 !important;
}

.standalone {
color: red;
}

/* remove the outline around the edit.gif image in the form tabbing */
.urban-edit-tabbing{
outline: none !important;
}

/* should go back to Products.DataGridField */
a.datagridwidget-add-button, a.datagridwidget-add-button:hover {
    background-position: 5px 5px !important;
    padding-right: 5px !important;
}

table[id^="datagridwidget-table"] {
    border: 1px grey solid;
    margin-bottom: 0.5em !important;
}

#datagridwidget-table-workLocations {
    width: 600px !important;
}

#datagridwidget-table-businessOldLocation {
    width: 600px !important;
}

table[id^="datagridwidget-table-"] THEAD TH {
    padding-left: 0.5em;
    background-color: #DDDDDD;
    font-weight: bold !important;
}

#datagridwidget-table-roadEquipments {
    width: 100% !important;
}

#datagridwidget-table-roadEquipments .datagridwidget-column-1 {
    width: 400px;
}

.urban-linkedfolders-icon {
position: relative;
}

.urban-add-icon {
position: absolute;
padding-top: 3px;
}

.urban-add-icon-big {
position: absolute;
padding-top: 3px;
}

.urban-licence-schedule {
float: right;
margin-top: -2em;
}

.urban-document-already-created {
background-color: #75AD0A;
}


