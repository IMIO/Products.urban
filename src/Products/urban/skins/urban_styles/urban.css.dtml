INPUT.button-buildlicence,
INPUT.button-declaration,
INPUT.button-miscdemand,
INPUT.button-division,
INPUT.button-envclassthree,
INPUT.button-geometrician,
INPUT.button-inquiry,
INPUT.button-notary,
INPUT.button-notaryletter,
INPUT.button-parceloutlicence,
INPUT.button-portionout,
INPUT.button-proprietary,
INPUT.button-street,
INPUT.button-urbancertificateone,
INPUT.button-urbancertificatetwo,
INPUT.button-urbanevent,
INPUT.button-urbaneventinquiry,
INPUT.button-urbanschedule
{
    padding-bottom: 0.1em;
    padding-top: 0.1em;
    border-color: buttonface;
    -moz-border-radius: 0.4em 0.4em 0.4em 0.4em;
