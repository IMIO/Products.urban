<configure
    xmlns="http://namespaces.zope.org/zope"
    i18n_domain="Products.urban">


    <!-- folder complete conditions-->
    <adapter
        for="Products.urban.interfaces.IBuildLicence
             urban.schedule.content.task_config.ITaskConfig"
        provides="urban.schedule.interfaces.ICreationCondition"
        factory=".generic.FolderCompleteCondition"
        name="schedule.condition.folder_complete"
    />

    <!-- inquiry conditions-->
    <adapter
        for="Products.urban.interfaces.IBuildLicence
             urban.schedule.content.task_config.ITaskConfig"
        provides="urban.schedule.interfaces.ICreationCondition"
        factory=".generic.InquiryCondition"
        name="schedule.condition.has_inquiry"
    />

</configure>
