<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="urban">

    <dependency step="urban-postInstall"/>

    <assignment remove="True"
                name="navigation"
                category="context"
                key="/"
                manager="plone.leftcolumn"
                type="portlets.Navigation" />

    <assignment remove="True"
                name="news"
                category="context"
                key="/"
                manager="plone.rightcolumn"
                type="portlets.News" />

    <assignment remove="True"
                name="events"
                category="context"
                key="/"
                manager="plone.rightcolumn"
                type="portlets.Events" />

    <portlet 
       addview="urban.portlets.portlet_urban"
       title="Portlet Urban"
       description="A portlet which can render some searches"
       i18n:attributes="title title_urban_portlet;
                        description description_urban_portlet">
       <for interface="plone.app.portlets.interfaces.IColumn" />
    </portlet>

    <assignment name="portlet_urban" category="context" key="/urban/"
              manager="plone.leftcolumn" type="urban.portlets.portlet_urban" >
      <property name="macro">portlet</property>
      <property name="template">portlet_urban</property>
    </assignment>    
</portlets>
